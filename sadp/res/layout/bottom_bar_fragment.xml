<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#70fff5"
    >

    <ImageButton
        android:id="@+id/topButton"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:src="@drawable/banner1a"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_weight="1" 
        android:background="@null"
        android:contentDescription="@string/top"
        />

    <ImageButton
        android:id="@+id/timeTableButton"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:layout_weight="1" 
        android:src="@drawable/banner2a"
        android:scaleType="fitCenter"
        android:background="@null"
        android:contentDescription="@string/timetable"
        />
        
    <ImageButton
        android:id="@+id/courseListButton"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:src="@drawable/banner3a"
        android:scaleType="fitCenter"
        android:background="@null"
        android:contentDescription="@string/courseList"
        />
    
</LinearLayout>