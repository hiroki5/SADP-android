<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <fragment
        android:id="@+id/courseDetailFragment"
        android:name="com.parse.starter.courses.CourseDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="460sp" 
        />
        
     <LinearLayout
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        
		<android.support.v4.view.ViewPager
		    android:id="@+id/pager"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" />
		     
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP" 
            android:layout_weight="1" 
            android:textColor="#FFFFFF"
            android:background="@layout/color_stateful"
            />
    
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間割" 
            android:textColor="#FFFFFF"
            android:layout_weight="1" 
            android:background="@layout/color_stateful"
            android:layout_marginRight="0.7sp"
            android:layout_marginLeft="0.7sp"
            />
            
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="講義一覧" 
            android:layout_weight="1" 
            android:textColor="#FFFFFF"
            android:background="@layout/color_stateful"
            />
        
    </LinearLayout>
    
    
    
</LinearLayout>